<h2>Edit book</h2>
<%= form_for :book, url: book_path(@book), method: :patch do |f| %>

  <p>
    Book name<br>
    <%= f.text_field(:name, {:class => 'form-control'}) %>
  </p>
  <p>
    Book description<br>
    <%= f.text_area(:address, {:class => 'form-control'}) %>
  </p>

  <p>
    <%= f.submit({:class => 'btn btn-success'}) %>
  </p>
<% end %>